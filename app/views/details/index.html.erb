


<div class="row">
  <div class="col-sm-6">
    <h1>Details</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_detail_path, class: 'btn btn-primary' do %>
    Add New Detail
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>


            <th>Shop name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address 1</th>
            <th>Address 2</th>
            <th>Address 3</th>

          <th></th>

      </tr>
    </thead>

    <tbody>
      <% @details.each do |detail| %>
        <%= content_tag :tr, id: dom_id(detail), class: dom_class(detail) do %>


                      <td><%= detail.shop_name %></td>
                      <td><%= detail.email %></td>
                      <td><%= detail.phone %></td>
                      <td><%= detail.address_1 %></td>
                      <td><%= detail.address_2 %></td>
                      <td><%= detail.address_3 %></td>


            <td><%= link_to 'Show', detail %></td>

        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
