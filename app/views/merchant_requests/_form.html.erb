<%= form_with(model: merchant_request, local: true) do |form| %>
  <% if merchant_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(merchant_request.errors.count, "error") %> prohibited this merchant_request from being saved:</h2>

      <ul>
      <% merchant_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :merchant_type %>
    <%= form.select :merchant_type,['Cash Register CPOS X5', 'Wireless MiniPOS ME51', 'Flagship Android POS N910'],{prompt: "Select Merchant"}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :quantity %>
    <%= form.number_field :quantity, class: 'form-control' %>
  </div>

  <div class="form-group">
    <% if merchant_request.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', merchant_request, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if merchant_request.persisted? %>
      <%= link_to "Cancel", merchant_request, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", merchant_requests_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
