<div class="page-header mt-5 shadow-sm p-2 bg-dark text-light rounded mb-0">
  <%= link_to merchant_requests_path, class: 'btn btn-dark' do %>
    All Merchants
  <% end %>

</div>

<hr>


<!-- Project One -->
     <div class="row">
       <div class="col-md-4">
           <%if @merchant_request.merchant_type == "Cash Register CPOS X5"%>
           <img src="https://wealthpay.herokuapp.com/img/gallery/1.png" alt="" class="image-fluid">
           <%end%>
           <%if @merchant_request.merchant_type == "Wireless MiniPOS ME51"%>
           <img src="https://wealthpay.herokuapp.com/img/gallery/2.png" alt="" class="image-fluid">
           <%end%>
           <%if @merchant_request.merchant_type == "Flagship Android POS N910"%>
            <img src="https://wealthpay.herokuapp.com/img/gallery/3.png" alt="" class="image-fluid">
           <%end%>

       </div>
       <div class="col-md-5">
         <h3>Merchant type</h3>
         <p><%= @merchant_request.merchant_type %></p>
         <a class="btn btn-primary btn-sm" href="#">QTY: <%= @merchant_request.quantity %></a>
         <%= link_to edit_merchant_request_path(@merchant_request), class: 'btn btn-danger btn-sm' do %>
           Edit
         <% end %>
       </div>
     </div>
     <!-- /.row -->
